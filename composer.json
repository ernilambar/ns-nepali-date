{
	"name": "ernilambar/ns-nepali-date",
	"description": "NS Nepali Date",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"wordpress",
		"wordpress-plugin"
	],
	"authors": [
		{
			"name": "Nilambar Sharma",
			"email": "nilambar@outlook.com",
			"homepage": "https://www.nilambar.net/",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=7.2",
		"ernilambar/nepali-date": "^1.0",
		"ernilambar/optioner": "^2.0",
		"kucrut/vite-for-wp": "^0.9.1",
		"yahnis-elsts/plugin-update-checker": "^5.4"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"ergebnis/composer-normalize": "^2.31",
		"php-parallel-lint/php-parallel-lint": "^1.3",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"wp-cli/i18n-command": "^2.6",
		"wp-coding-standards/wpcs": "^3.0"
	},
	"autoload": {
		"psr-4": {
			"NSNepaliDate\\": "app/"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"ergebnis/composer-normalize": true
		},
		"optimize-autoloader": true,
		"sort-packages": true
	},
	"scripts": {
		"post-install-cmd": [
			"@cleanup-vite"
		],
		"post-update-cmd": [
			"@cleanup-vite"
		],
		"cleanup-vite": [
			"rm -rf vendor/kucrut/vite-for-wp/scripts/",
			"rm -rf vendor/kucrut/vite-for-wp/types/",
			"rm -f vendor/kucrut/vite-for-wp/eslint.config.js"
		],
		"phpcbf": "@php ./vendor/bin/phpcbf --report-full --report-summary .",
		"phpcs": "@php ./vendor/bin/phpcs --report-full --report-summary .",
		"pot": "wp i18n make-pot . --exclude=build,deploy,node_modules,vendor --headers='{\"POT-Creation-Date\":\"\"}'"
	}
}
