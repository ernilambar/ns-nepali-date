{
	"name": "ernilambar/ns-nepali-date",
	"description": "NS Nepali Date",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"wordpress",
		"wordpress-plugin"
	],
	"authors": [
		{
			"name": "Nilambar Sharma",
			"email": "nilambar@outlook.com",
			"homepage": "https://www.nilambar.net/",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=7.2",
		"ernilambar/nepali-date": "^1.0",
		"ernilambar/optioner": "^2.0",
		"kucrut/vite-for-wp": "^0.9.2",
		"yahnis-elsts/plugin-update-checker": "^5.4"
	},
	"autoload": {
		"psr-4": {
			"NSNepaliDate\\": "app/"
		}
	},
	"config": {
		"allow-plugins": {
			"ergebnis/composer-normalize": true
		},
		"optimize-autoloader": true,
		"sort-packages": true
	},
	"scripts": {
		"lint-php": [
			"composer --working-dir=devtools update --no-interaction",
			"devtools/vendor/bin/parallel-lint --colors --exclude .git --exclude vendor --exclude node_modules --exclude devtools --exclude deploy ."
		],
		"phpcbf": [
			"composer --working-dir=devtools update --no-interaction",
			"devtools/vendor/bin/phpcbf --standard=.phpcs.xml.dist"
		],
		"phpcs": [
			"composer --working-dir=devtools update --no-interaction",
			"devtools/vendor/bin/phpcs --standard=.phpcs.xml.dist"
		],
		"pot": [
			"composer --working-dir=devtools update --no-interaction",
			"devtools/vendor/bin/wp i18n make-pot . --exclude=build,deploy,node_modules,vendor --headers='{\"POT-Creation-Date\":\"\"}'"
		],
		"lint": [
			"@lint-php",
			"@phpcs"
		]
	}
}
