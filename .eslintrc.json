{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["plugin:@wordpress/eslint-plugin/recommended"],
  "parserOptions": {
    "requireConfigFile": false
  },
	"settings": {
    "react": {
      "version": "18.0"
    }
  },
  "globals": {
    "wp": true,
    "ajaxurl": true,
    "NSND_POSTS": true,
    "jQuery": true
  },
  "rules": {
		"import/no-unresolved": "off",
    "no-unused-vars": "warn",
    "no-console": "error",
    "no-alert": "error",
    "vars-on-top": "warn"
  }
}
