{
	"name": "ns-nepali-date",
	"title": "NS Nepali Date",
	"version": "1.0.18",
	"description": "NS Nepali Date",
	"author": "Nilambar Sharma",
	"license": "GPL-2.0-or-later",
	"main_file": "ns-nepali-date.php",
	"keywords": [
		"wordpress",
		"wordpress-plugin"
	],
	"homepage": "https://github.com/ernilambar/ns-nepali-date",
	"repository": {
		"type": "git",
		"url": "https://github.com/ernilambar/ns-nepali-date.git"
	},
	"bugs": {
		"url": "https://github.com/ernilambar/ns-nepali-date/issues"
	},
	"type": "module",
	"browserslist": "> 1%, not dead",
	"packtor": {
		"files": [
			"**/*",
			"!*.js",
			"!*.json",
			"!*.lock",
			"!*.yaml",
			"!languages/**/*",
			"!src/**/*",
			"!vendor/yahnis-elsts/plugin-update-checker/languages/*"
		]
	},
	"npmpackagejsonlint": {
		"extends": "@wordpress/npm-package-json-lint-config"
	},
	"devDependencies": {
		"@kucrut/vite-for-wp": "^0.9.1",
		"@wordpress/npm-package-json-lint-config": "^5.1.0",
		"dotenv": "^16.4.5",
		"easy-replace-in-files": "^1.0.3",
		"npm-package-json-lint": "^8.0.0",
		"packtor": "^1.0.2",
		"postcss-nested": "^6.0.1",
		"postcss-preset-env": "^9.5.14",
		"prettier": "npm:wp-prettier@^3.0.3",
		"shx": "^0.3.4",
		"vite": "^5.3.1",
		"vite-plugin-browser-sync": "^3.0.3"
	},
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"version": "easy-replace-in-files",
		"lint-pkg-json": "npmPkgJsonLint .",
		"pot": "composer run-script pot",
		"format": "prettier --write \"src/**/*.{js,jsx,css,scss}\" vite.config.js *.json",
		"ready:build": "shx rm -rf build/ && pnpm run build",
		"ready:vendor": "shx rm -rf vendor/ && composer install --no-dev -o",
		"predeploy": "pnpm run ready:vendor && pnpm run ready:build",
		"deploy": "packtor"
	},
	"pnpm": {
		"patchedDependencies": {
			"@kucrut/vite-for-wp@0.9.1": "patches/@kucrut__vite-for-wp@0.9.1.patch"
		}
	}
}
